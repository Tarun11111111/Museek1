@using Microsoft.AspNetCore.Identity
@using Museek.Data
@using System.ComponentModel.DataAnnotations
@inject UserManager<MuseekUser> UserManager
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager NavigationManager

<PageTitle>Museek | My Account</PageTitle>

<div class="account-container">
    @if (isLoading)
    {
        <div class="loading-state">
            <div class="spinner"></div>
            <p>Loading your account...</p>
        </div>
    }
    else if (currentUser == null)
    {
        <div class="error-message">
            <p>You must be logged in to view this page.</p>
            <a href="Account/Login" class="btn-secondary">Go to Login</a>
        </div>
    }
    else
    {
        <h1>@(isEditing ? "Edit Account" : "My Account")</h1>
        <p>@(isEditing ? "Update your profile information" : "View and manage your profile")</p>

        <div class="account-sections">
            @if (!isEditing)
            {
                <section class="account-section profile-section">
                    <div class="profile-picture-display">
                        <div class="profile-placeholder">
                            <span>@GetInitials(currentUser.FirstName)</span>
                        </div>
                    </div>

                    <div class="profile-details">
                        <div class="detail-row">
                            <span class="detail-label">First Name</span>
                            <span class="detail-value">@currentUser.FirstName</span>
                        </div>

                        <div class="detail-row">
                            <span class="detail-label">Last Name</span>
                            <span class="detail-value">@currentUser.LastName</span>
                        </div>

                        <div class="detail-row">
                            <span class="detail-label">Email</span>
                            <span class="detail-value">@currentUser.Email</span>
                        </div>

                        <div class="detail-row">
                            <span class="detail-label">Phone</span>
                            <span class="detail-value">@(string.IsNullOrEmpty(currentUser.PhoneNumber) ? "Not set" : currentUser.PhoneNumber)</span>
                        </div>
                    </div>
                </section>

                <div class="action-buttons">
                    <button class="btn-primary" @onclick="EnableEditing">Edit Account</button>
                    <a href="/home" class="btn-secondary">Back to Home</a>
                </div>
            }
            else
            {
                <section class="account-section edit-section">
                    <EditForm Model="Input" OnValidSubmit="UpdateUser" FormName="account-edit">
                        <DataAnnotationsValidator />
                        <ValidationSummary class="validation-errors" role="alert" />

                        <div class="form-group">
                            <label for="firstname">First Name</label>
                            <InputText id="firstname" @bind-Value="Input.FirstName" class="form-input" />
                            <ValidationMessage For="() => Input.FirstName" class="field-error" />
                        </div>

                        <div class="form-group">
                            <label for="lastname">Last Name</label>
                            <InputText id="lastname" @bind-Value="Input.LastName" class="form-input" />
                            <ValidationMessage For="() => Input.LastName" class="field-error" />
                        </div>

                        <div class="form-group">
                            <label for="phone">Phone Number</label>
                            <InputText id="phone" @bind-Value="Input.PhoneNumber" class="form-input" />
                            <ValidationMessage For="() => Input.PhoneNumber" class="field-error" />
                        </div>

                        @if (saveSuccess)
                        {
                            <div class="success-message">
                                Account updated successfully!
                            </div>
                        }

                        @if (saveError != null)
                        {
                            <div class="error-message">
                                @saveError
                            </div>
                        }

                        <div class="action-buttons">
                            <button type="submit" class="btn-primary">Save Changes</button>
                            <button type="button" class="btn-secondary" @onclick="CancelEditing">Cancel</button>
                        </div>
                    </EditForm>
                </section>
            }
        </div>
    }
</div>

@code {
    private MuseekUser? currentUser;
    private InputModel Input { get; set; } = new();

    private bool isLoading = true;
    private bool isEditing = false;
    private bool saveSuccess = false;
    private string? saveError;

    // Form Model
    private class InputModel
    {
        [Required]
        [Display(Name = "First Name")]
        public string? FirstName { get; set; }

        [Required]
        [Display(Name = "Last Name")]
        public string? LastName { get; set; }

        [Phone]
        [Display(Name = "Phone number")]
        public string? PhoneNumber { get; set; }
    }

    protected override async Task OnInitializedAsync()
    {
        await LoadUserAsync();
    }

    private async Task LoadUserAsync()
    {
        try
        {
            isLoading = true;

            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var userPrincipal = authState.User;

            if (userPrincipal.Identity != null && userPrincipal.Identity.IsAuthenticated)
            {
                currentUser = await UserManager.GetUserAsync(userPrincipal);

                if (currentUser != null)
                {
                    Input.FirstName = currentUser.FirstName;
                    Input.LastName = currentUser.LastName;
                    Input.PhoneNumber = currentUser.PhoneNumber;
                }
            }
        }
        catch (Exception ex)
        {
            saveError = "Error loading user data.";
            Console.WriteLine(ex);
        }
        finally
        {
            isLoading = false;
        }
    }

    private void EnableEditing()
    {
        isEditing = true;
        saveSuccess = false;
        saveError = null;
    }

    private void CancelEditing()
    {
        if (currentUser != null)
        {
            Input.FirstName = currentUser.FirstName;
            Input.LastName = currentUser.LastName;
            Input.PhoneNumber = currentUser.PhoneNumber;
        }

        isEditing = false;
        saveSuccess = false;
        saveError = null;
    }

    private async Task UpdateUser()
    {
        if (currentUser == null) return;

        try
        {
            currentUser.FirstName = Input.FirstName;
            currentUser.LastName = Input.LastName;
            currentUser.PhoneNumber = Input.PhoneNumber;

            var result = await UserManager.UpdateAsync(currentUser);

            if (result.Succeeded)
            {
                saveSuccess = true;
                saveError = null;
                isEditing = false;

                // Refresh to update header name
                NavigationManager.NavigateTo("account", forceLoad: true);
            }
            else
            {
                saveError = "Error updating profile: " + string.Join(", ", result.Errors.Select(e => e.Description));
                saveSuccess = false;
            }
        }
        catch (Exception ex)
        {
            saveError = $"Unexpected error: {ex.Message}";
            saveSuccess = false;
        }
    }

    private string GetInitials(string? name)
    {
        if (string.IsNullOrEmpty(name)) return "U";
        return name.Substring(0, 1).ToUpper();
    }
}

<style>
    /* Container for the whole page */
    .account-container {
        max-width: 800px;
        margin: 40px auto;
        padding: 30px;
        background-color: #1e1e1e;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.5);
        color: #ffffff;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    h1 {
        font-size: 2rem;
        margin-bottom: 0.5rem;
        font-weight: 600;
    }

    p {
        color: #aaaaaa;
        margin-bottom: 2rem;
    }

    /* Profile Display Section */
    .account-section {
        background-color: #2a2a2a;
        border-radius: 10px;
        padding: 25px;
        margin-bottom: 20px;
    }

    .profile-section {
        display: flex;
        align-items: center;
        gap: 30px;
    }

    /* Circle Placeholder for Initials */
    .profile-placeholder {
        width: 100px;
        height: 100px;
        background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2.5rem;
        font-weight: bold;
        color: white;
        text-transform: uppercase;
        box-shadow: 0 4px 10px rgba(0,0,0,0.3);
    }

    /* Data Rows */
    .profile-details {
        flex: 1;
    }

    .detail-row {
        display: flex;
        justify-content: space-between;
        padding: 12px 0;
        border-bottom: 1px solid #3d3d3d;
    }

        .detail-row:last-child {
            border-bottom: none;
        }

    .detail-label {
        color: #888;
        font-weight: 500;
    }

    .detail-value {
        color: #fff;
        font-weight: 600;
    }

    /* Edit Form Styles */
    .form-group {
        margin-bottom: 20px;
    }

    label {
        display: block;
        margin-bottom: 8px;
        color: #ccc;
        font-size: 0.9rem;
    }

    .form-input {
        width: 100%;
        padding: 12px;
        background-color: #121212;
        border: 1px solid #444;
        border-radius: 6px;
        color: white;
        font-size: 1rem;
        transition: border-color 0.2s;
    }

        .form-input:focus {
            outline: none;
            border-color: #2575fc;
        }

    /* Buttons */
    .action-buttons {
        display: flex;
        gap: 15px;
        margin-top: 25px;
    }

    .btn-primary {
        background-color: #2575fc;
        color: white;
        border: none;
        padding: 10px 24px;
        border-radius: 6px;
        font-weight: 600;
        cursor: pointer;
        transition: background 0.2s;
    }

        .btn-primary:hover {
            background-color: #1b5fd8;
        }

    .btn-secondary {
        background-color: transparent;
        color: #ccc;
        border: 1px solid #555;
        padding: 10px 24px;
        border-radius: 6px;
        font-weight: 600;
        cursor: pointer;
        text-decoration: none;
        display: inline-block;
        transition: all 0.2s;
    }

        .btn-secondary:hover {
            background-color: #333;
            color: white;
            border-color: #777;
        }

    /* Messages */
    .success-message {
        background-color: rgba(40, 167, 69, 0.2);
        color: #28a745;
        padding: 15px;
        border-radius: 6px;
        border: 1px solid #28a745;
        margin-bottom: 20px;
    }

    .error-message {
        background-color: rgba(220, 53, 69, 0.2);
        color: #dc3545;
        padding: 15px;
        border-radius: 6px;
        border: 1px solid #dc3545;
        margin-bottom: 20px;
    }

    .field-error {
        color: #ff6b6b;
        font-size: 0.85rem;
        margin-top: 5px;
        display: block;
    }

    /* Loading Spinner */
    .loading-state {
        text-align: center;
        padding: 50px;
        color: #888;
    }

    .spinner {
        width: 40px;
        height: 40px;
        border: 4px solid #333;
        border-top: 4px solid #2575fc;
        border-radius: 50%;
        margin: 0 auto 15px;
        animation: spin 1s linear infinite;
    }

    @@keyframes spin {
        0% {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }
    }
</style>