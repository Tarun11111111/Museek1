@page "/userlibrary"
@rendermode InteractiveServer
@using Microsoft.EntityFrameworkCore
@using System.Security.Claims
@using Museek.Domain
@using Museek.Data
@inject IDbContextFactory<MuseekContext> DbFactory
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager NavigationManager
@attribute [Authorize]

<PageTitle>Library</PageTitle>

<div class="library-page">

    <h1 class="page-title">Library</h1>

    <div class="tabs">
        <span class="tab active">Playlists</span>
        <a class="tab-link" href="/usersongs">Liked Songs</a>
    </div>

    <div class="top-actions">
        <div class="search-bar">
            <img src="images/search.png" class="search-icon" />
            <input type="text" placeholder="Search playlists" @bind="searchText" />
        </div>

        <a href="/playlists/create" class="upload-btn">+ New Playlist</a>
    </div>

    <div class="playlist-grid">
        @if (!FilteredPlaylists.Any())
        {
            <div class="empty-row">
                No playlists found.
            </div>
        }
        else
        {
            @foreach (var p in FilteredPlaylists)
            {
                <a class="playlist-card" href="@($"/playlists/details?id={p.Id}")">
                    <img src="@(!string.IsNullOrWhiteSpace(p.Cover_Image) ? p.Cover_Image : "images/default-cover.jpg")"
                         class="playlist-img" />

                    <div class="playlist-meta">
                        <div class="playlist-title">@p.Name</div>

                        @if (isAdmin && !string.IsNullOrWhiteSpace(p.CuratedCategory))
                        {
                            <div class="playlist-chip">@p.CuratedCategory</div>
                        }

                        <div class="playlist-desc">@p.Description</div>
                    </div>
                </a>
            }
        }
    </div>

</div>

@code {
    private MuseekContext context = default!;
    private string currentUserId = string.Empty;
    private string searchText = "";

    private bool isAdmin = false;

    private List<Playlist> playlists = new();

    protected override async Task OnInitializedAsync()
    {
        context = DbFactory.CreateDbContext();

        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        isAdmin = user.IsInRole("Administrator");

        currentUserId =
            user.FindFirst(ClaimTypes.NameIdentifier)?.Value
            ?? user.FindFirst("userId")?.Value
            ?? string.Empty;

        if (string.IsNullOrWhiteSpace(currentUserId))
        {
            NavigationManager.NavigateTo("Account/Login");
            return;
        }

        playlists = await context.Playlist
            .Where(p => p.UserId == currentUserId && p.IsCurated == false)
            .OrderByDescending(p => p.DateCreated)
            .ToListAsync();
    }

    private IEnumerable<Playlist> FilteredPlaylists =>
        string.IsNullOrWhiteSpace(searchText)
            ? playlists
            : playlists.Where(p =>
                (p.Name ?? "").Contains(searchText, StringComparison.OrdinalIgnoreCase)
                || (p.Description ?? "").Contains(searchText, StringComparison.OrdinalIgnoreCase));

    public async ValueTask DisposeAsync()
    {
        if (context != null)
        {
            await context.DisposeAsync();
        }
    }
}
