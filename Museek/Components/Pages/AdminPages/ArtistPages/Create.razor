@page "/artists/create"
@rendermode InteractiveServer
@attribute [Authorize(Roles = "Administrator")]
@using Microsoft.EntityFrameworkCore
@using System.Net.Http.Json
@using Museek.Domain
@inject IDbContextFactory<Museek.Data.MuseekContext> DbFactory
@inject NavigationManager NavigationManager
@inject IWebHostEnvironment Env
@inject HttpClient Http

<PageTitle>Create</PageTitle>

<h1>Create</h1>
<h2>Artist</h2>
<hr />

<div class="row">

    <!-- Left: preview card -->
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Selected Profile Picture</h5>

                @if (!string.IsNullOrWhiteSpace(Artist.Profile_Pic))
                {
                    <div class="ratio ratio-1x1">
                        <img src="@GetLocalImageSrc(Artist.Profile_Pic)"
                             alt="Selected artist profile picture"
                             class="img-fluid rounded"
                             style="width:100%; height:100%; object-fit:cover;" />
                    </div>

                    <div class="text-muted mt-2" style="word-break: break-all;">
                        @* @Artist.Profile_Pic *@
                    </div>
                }
                else
                {
                    <div class="text-muted">No image selected</div>
                }
            </div>
        </div>
    </div>

    <!-- Right: form -->
    <div class="col-md-8">
        <EditForm method="post" Model="Artist" OnValidSubmit="AddArtist" FormName="create" Enhance>
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" />

            <div class="mb-3">
                <label class="form-label">Name:</label>
                <InputText @bind-Value="Artist.Name" class="form-control" />
            </div>

            <div class="mb-3">
                <label class="form-label">Last.fm helper:</label>

                <div class="d-flex gap-2">
                    <input class="form-control"
                           placeholder="Type artist name for suggestions"
                           @bind="lastFmQuery"
                           @bind:event="oninput" />

                    <button type="button"
                            class="btn btn-secondary"
                            @onclick="FetchFromLastFm"
                            disabled="@isFetching">
                        @(isFetching ? "Fetching..." : "Fetch from Last.fm")
                    </button>
                </div>

                @if (suggestions.Count > 0)
                {
                    <div class="mt-2 d-flex flex-wrap gap-2">
                        @foreach (var s in suggestions)
                        {
                            <button type="button"
                                    class="btn btn-sm btn-outline-light"
                                    @onclick="@(() => PickSuggestion(s))">
                                @s
                            </button>
                        }
                    </div>
                }

                @if (!string.IsNullOrWhiteSpace(fetchError))
                {
                    <div class="text-danger mt-2">@fetchError</div>
                }

                <div class="text-muted mt-2">
                    Fetch only fills Name and Bio. Nothing is saved until you click Create.
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">Bio:</label>
                <InputText @bind-Value="Artist.Bio" class="form-control" />
            </div>

            <div class="mb-3">
                <label class="form-label">Country:</label>
                <InputText @bind-Value="Artist.Country" class="form-control" />
            </div>

            <div class="mb-3">
                <label class="form-label">Profile Picture:</label>
                <InputSelect @bind-Value="Artist.Profile_Pic" class="form-control">
                    <option value="">-- Select Image --</option>
                    @foreach (var img in ImageFiles)
                    {
                        <option value="@($"Artist Profile Images/{img}")">@img</option>
                    }
                </InputSelect>
            </div>

            <button type="submit" class="btn btn-primary">Create</button>
        </EditForm>
    </div>
</div>

<div class="mt-3">
    <a href="/artists">Back to List</a>
</div>

@code {
    [SupplyParameterFromForm]
    private Artist Artist { get; set; } = new();

    private List<string> ImageFiles = new();

    private string _lastFmQuery = "";
    private List<string> suggestions = new();

    private bool isFetching = false;
    private string fetchError = "";

    private string lastFmQuery
    {
        get => _lastFmQuery;
        set
        {
            if (_lastFmQuery == value) return;
            _lastFmQuery = value;
            _ = LoadSuggestionsAsync();
        }
    }

    protected override void OnInitialized()
    {
        LoadImages();
    }

    private void LoadImages()
    {
        var dir = Path.Combine(Env.WebRootPath, "Artist Profile Images");
        if (Directory.Exists(dir))
            ImageFiles = Directory.GetFiles(dir).Select(Path.GetFileName).ToList();
    }

    private async Task AddArtist()
    {
        using var context = DbFactory.CreateDbContext();
        context.Artist.Add(Artist);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/artists");
    }

    private async Task LoadSuggestionsAsync()
    {
        fetchError = "";

        var q = (_lastFmQuery ?? "").Trim();
        if (q.Length < 2)
        {
            suggestions.Clear();
            await InvokeAsync(StateHasChanged);
            return;
        }

        try
        {
            var url = NavigationManager.ToAbsoluteUri($"/api/lastfm/search?query={Uri.EscapeDataString(q)}").ToString();
            var list = await Http.GetFromJsonAsync<List<string>>(url);
            suggestions = list ?? new();
        }
        catch
        {
            suggestions.Clear();
        }

        await InvokeAsync(StateHasChanged);
    }

    private void PickSuggestion(string s)
    {
        lastFmQuery = s;
        suggestions.Clear();

        if (string.IsNullOrWhiteSpace(Artist.Name))
            Artist.Name = s;
    }

    private async Task FetchFromLastFm()
    {
        fetchError = "";
        isFetching = true;

        try
        {
            var name = (lastFmQuery ?? "").Trim();
            if (string.IsNullOrWhiteSpace(name))
                name = (Artist.Name ?? "").Trim();

            if (string.IsNullOrWhiteSpace(name))
            {
                fetchError = "Type an artist name first.";
                return;
            }

            var url = NavigationManager.ToAbsoluteUri($"/api/lastfm/artist?name={Uri.EscapeDataString(name)}").ToString();
            var data = await Http.GetFromJsonAsync<LastFmArtistDto>(url);

            if (data == null)
            {
                fetchError = "No data returned.";
                return;
            }

            if (!string.IsNullOrWhiteSpace(data.name))
                Artist.Name = data.name;

            if (!string.IsNullOrWhiteSpace(data.bio))
                Artist.Bio = data.bio;

            suggestions.Clear();
        }
        catch
        {
            fetchError = "Fetch failed. Check your API key and endpoint.";
        }
        finally
        {
            isFetching = false;
        }
    }

    private static string GetLocalImageSrc(string? value)
    {
        var v = (value ?? "").Trim();
        if (string.IsNullOrWhiteSpace(v)) return "";
        return "/" + v.TrimStart('/');
    }

    private class LastFmArtistDto
    {
        public string? name { get; set; }
        public string? bio { get; set; }
    }
}
